{% extends "layout.html.twig" %}

{% block title %}{{ ticket.title }}{% endblock %}

{% block path %}
	<div class="row">
		<div class="path">
			<p class="container"><a href="{{ path('home') }}">Accueil</a> > {{ ticket.title }}</p>
		</div>
	</div>
{% endblock %}

{% block content %}
    <div class="row">
    	<article>
    		<h2>{{ ticket.title }}</h2>
    		<p>{{ ticket.content|nl2br }}</p>
    		<p class="align-right italic"><span class="bold">Mis en ligne le :</span> {{ ticket.dateCreation }}</p>
    	</article>
    </div>
    <div class="row">
        <div class="well">
        {% for comment in comments %}
            <legend><strong>{{ comment.author }}</strong> a dit : <span class="pull-right">{{ comment.dateCreation }}</legend>
            <p class="comment-content">
                {{ comment.content }}<br>
                <a href="" class="pull-right">Signaler un abus</a>
            </p>
        {% else %}
            <p class="no-comment">Aucun commentaire n'est disponible pour le moment.</p>
        {% endfor %}
        </div>
    </div>
{% endblock %}